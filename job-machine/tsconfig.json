{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components": ["components/*"],
      "@api": ["api/*"],
      "@assets": ["assets/*"],
      "@constants": ["constants/*"],
      "@helper": ["helper/*"],
      "@hooks": ["hook/*"],
      "@layout": ["layout/*"],
      "@redux": ["redux/*"],
      "@routers": ["routers/*"],
      "@service": ["service/*"],
      "@utils": ["utils/*"],
    }
  },
  "include": [
    "src"
  ]
}
